{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "target": "es2017",
    "experimentalDecorators": true,
    "module": "es2020",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@angular/*": ["./node_modules/@angular/*"]
    },
    "importHelpers": true,
   
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2020", "dom"]
  }
}
